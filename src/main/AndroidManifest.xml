<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.emil.app">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:launchMode = "singleInstance"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/dog_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name="Game.Android.ActivityHandler" />
        <activity android:name="Game.Android.GameActivity" />
        <activity android:name="Game.Android.LevelClearedActivity" />
        <activity android:name="Game.Android.GameOverActivity" />
        <activity android:name="Game.Android.StartMenuActivity" >
            Game.Android.StartMenuActivity
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="Game.Android.SelectLevelActivity" />
    </application>

</manifest>